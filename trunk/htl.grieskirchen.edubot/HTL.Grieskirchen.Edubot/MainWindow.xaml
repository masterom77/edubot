<Window x:Class="HTL.Grieskirchen.Edubot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edubot" Height="768" Width="1024" xmlns:my="clr-namespace:HTL.Grieskirchen.Edubot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="Datei" Name="miFile">
                    <MenuItem Header="Neu..." Name="miNew" Click="miNew_Click"></MenuItem>
                    <MenuItem Header="Öffnen..." Name="miOpen" Click="miOpen_Click"></MenuItem>
                    <MenuItem Header="Speichern" Name="miSave" Click="miSave_Click"></MenuItem>
                    <MenuItem Header="Speichern unter..." Name="miSaveAs" Click="miSaveAs_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Bearbeiten"></MenuItem>
            <MenuItem Header="Ansicht"></MenuItem>
        </Menu>
        <TabControl Grid.RowSpan="2" Grid.Row="1">
            <TabItem Header="CLI">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" AcceptsTab="True" Name="tbCodeArea" TextChanged="tbCodeArea_TextChanged"></TextBox>
                    <Button Grid.Row="1" Height="20" Content="Ausführen" Name="btExecute" Click="btExecute_Click"></Button>
                    <TextBox HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Grid.Row="2" Margin="0,0,0,0" Name="tbConsole"></TextBox>
                </Grid>
            </TabItem>
            <TabItem Header="Zeichenfläche">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ToolBarTray Grid.RowSpan="2" Orientation="Vertical" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ToolBar Band="1" BandIndex="1">
                            <Button>
                                <Image></Image>
                            </Button>
                            <Button>
                                <Image></Image>
                            </Button>
                            <Button>
                                <Image></Image>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                    <InkCanvas Grid.Column="1" Grid.RowSpan="2" Margin="5,5,5,5" Name="icDrawing"></InkCanvas>
                    <!--<my:DrawingPanel Grid.Column="1" Grid.RowSpan="2" Margin="5,5,5,5"></my:DrawingPanel>-->
                </Grid>

            </TabItem>
            <TabItem Header="Einstellungen" >
                <TabControl TabStripPlacement="Left">
                    <TabItem Header="Adapter">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label>Registriert</Label>
                            <Label Grid.Column="2">Verfügbar</Label>
                            <ListBox Grid.Row="1" Margin="5,5,5,5" Name="lbRegisteredAdapters"></ListBox>
                            <ListBox Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" Name="lbAvailableAdapters"></ListBox>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,5,0,5">
                                <Button Height="25" Name="btRegister" Click="btRegister_Click">Registrieren</Button>
                                <Button Height="25" Name="btDeregister">Entfernen</Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
                
            </TabItem>
            <TabItem Header="Handbuch"></TabItem>
        </TabControl>
        <StatusBar Grid.ColumnSpan="2" Grid.Row="4"></StatusBar>
        <my:Visualisation3D Grid.Column="1" Grid.Row="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0" x:Name="visualisation3D" VerticalAlignment="Stretch" Width="Auto" />
        <Button Content="Visualisierung in eigenem Fenster anzeigen" Grid.Column="1" Grid.Row="1" Height="33" HorizontalAlignment="Left" Margin="4,97,0,0" Name="ExtVis" VerticalAlignment="Top" Width="157" Click="ExtVis_Click" />
        <my:VisualisationAbove Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" x:Name="visualisationAbove" VerticalAlignment="Stretch" Height="Auto" Width="Auto" />
    </Grid>
</Window>
